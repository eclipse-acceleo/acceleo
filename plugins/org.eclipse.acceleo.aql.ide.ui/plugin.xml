<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="mtl"
            id="org.eclipse.acceleo.aql.ide.ui"
            name="Acceleo"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.presentationReconcilers">
      <presentationReconciler
            class="org.eclipse.tm4e.ui.text.TMPresentationReconciler"
            contentType="org.eclipse.acceleo.aql.ide.ui">
      </presentationReconciler>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="org.eclipse.acceleo.aql.ide.ui"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   

   <extension
         point="org.eclipse.lsp4e.languageServer">
      <server
            class="org.eclipse.acceleo.aql.ide.ui.AcceleoConnectionProvider"
            id="org.eclipse.acceleo.aql.ide.ui.server"
            label="Acceleo Language Server"
            singleton="true">
      </server>
      <contentTypeMapping
            contentType="org.eclipse.acceleo.aql.ide.ui"
            id="org.eclipse.acceleo.aql.ide.ui.server">
      </contentTypeMapping>
   </extension>
   
      <extension
         point="org.eclipse.compare.contentViewers">
      <contentTypeBinding
            contentTypeId="org.eclipse.acceleo.aql.ide.ui"
            contentViewerId="org.eclipse.ui.genericeditor.compareViewer">
      </contentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.compare.contentMergeViewers">
      <contentTypeBinding
            contentMergeViewerId="org.eclipse.ui.genericeditor.compareViewer"
            contentTypeId="org.eclipse.acceleo.aql.ide.ui">
      </contentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.autoEditStrategies">
      <autoEditStrategy
            class="org.eclipse.acceleo.aql.ide.ui.AcceleoAutoEditStrategy"
            contentType="org.eclipse.acceleo.aql.ide.ui">
      </autoEditStrategy>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.acceleo.aql.ide.ui.category"
            name="Acceleo 4">
      </category>
      <wizard
            category="org.eclipse.acceleo.aql.ide.ui.category"
            class="org.eclipse.acceleo.aql.ide.ui.wizard.NewModuleWizard"
            icon="icons/AcceleoEditor.gif"
            id="org.eclipse.acceleo.aql.ide.ui.newModuleWizard"
            name="Acceleo Module File">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.eclipse.acceleo.aql.ide.ui.property.PropertyTester"
            id="org.eclipse.acceleo.aql.ide.ui.property.propertyTester"
            namespace="org.eclipse.acceleo.aql.ide.ui.property"
            properties="isMain"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Acceleo 4 Model to Text Category"
            id="org.eclipse.acceleo.aql.ide.ui.commands.category"
            name="Acceleo 4">
      </category>
      <command
            categoryId="org.eclipse.acceleo.aql.ide.ui.commands.category"
            id="org.eclipse.acceleo.aql.ide.ui.commands.createGeneratorClassCommand"
            name="Create Generator Class">
      </command>
      <command
            categoryId="org.eclipse.acceleo.aql.ide.ui.commands.category"
            id="org.eclipse.acceleo.aql.ide.ui.commands.createEclipseUIGeneratorProjectCommand"
            name="Create Eclipse UI Generator Project">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.acceleo.aql.ide.ui.handlers.CreateStandaloneClassHandler"
            commandId="org.eclipse.acceleo.aql.ide.ui.commands.createGeneratorClassCommand">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <and>
                     <instanceof
                           value="org.eclipse.core.resources.IFile">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.acceleo.aql.ide.ui.property.isMain">
                     </test>
                  </and>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.eclipse.acceleo.aql.ide.ui.handlers.CreateEclipseUIProjectHandler"
            commandId="org.eclipse.acceleo.aql.ide.ui.commands.createEclipseUIGeneratorProjectCommand">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <and>
                     <instanceof
                           value="org.eclipse.core.resources.IFile">
                     </instanceof>
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.acceleo.aql.ide.ui.property.isMain">
                     </test>
                  </and>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               icon="icons/AcceleoEditor.gif"
               id="org.eclipse.acceleo.aql.ide.ui.menus.createGeneratorClassMenu"
               label="Acceleo 4">
            <command
                  commandId="org.eclipse.acceleo.aql.ide.ui.commands.createGeneratorClassCommand"
                  icon="icons/AcceleoEditor.gif"
                  id="org.eclipse.acceleo.aql.ide.ui.menus.createGeneratorClassCommand">
            </command>
            <command
                  commandId="org.eclipse.acceleo.aql.ide.ui.commands.createEclipseUIGeneratorProjectCommand"
                  icon="icons/AcceleoEditor.gif"
                  id="org.eclipse.acceleo.aql.ide.ui.menus.createEclipseUIGeneratorProjectCommand">
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
