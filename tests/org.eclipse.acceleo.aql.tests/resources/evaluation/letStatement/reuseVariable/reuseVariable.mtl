[module reuseVariable('http://www.eclipse.org/emf/2002/Ecore')/]

[comment @main /]
[template public myTemplate(myParam : ecore::EPackage)]
  [file (myParam.name + '.txt', overwrite)]
    [let myVariable : ecore::EClassifier = myParam.eClassifiers->first(), myOtherVariable = myVariable.name.toUpper()]
      [myVariable.name/]
      [myOtherVariable/]
    [/let]
  [/file]
[/template]
